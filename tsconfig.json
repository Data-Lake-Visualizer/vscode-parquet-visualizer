{
	"include": [
		"src/**/*.ts",
		"./package.json"
	],
	"exclude": [
		"node_modules",
	],
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6",
			"DOM"
		],
		"sourceMap": true,
		"strict": true,   /* enable all strict type-checking options */
		"strictPropertyInitialization": false,
		/* Additional Checks */
		"noUnusedLocals": true, /* Report errors on unused locals. */
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
	}
}
